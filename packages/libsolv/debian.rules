#!/usr/bin/make -f

export DH_VERBOSE=1

%:
	dh $@ --parallel

override_dh_auto_configure:
	dh_auto_configure -- -DLIB=lib -DENABLE_HELIXREPO=1 -DENABLE_RPMDB=1 \
	-DENABLE_RPMMD=1 -DENABLE_SUSEREPO=1 -DENABLE_APPDATA=1 -DDEBIAN=1 \
	-DMULTI_SEMANTICS=1 -DUSE_VENDORDIRS=1 -DCMAKE_SKIP_RPATH=1 \
	-DENABLE_STATIC=1 -DDISABLE_SHARED=1 -DCMAKE_VERBOSE_MAKEFILE=TRUE \
	-DCMAKE_BUILD_TYPE=RelWithDebInfo \


