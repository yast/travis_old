#!/usr/bin/make -f

export DH_VERBOSE=1

%:
	dh $@

# we need to generate the autoconf/automake files first
# see https://www.debian.org/doc/manuals/maint-guide/dreq.en.html
override_dh_auto_configure:
	$(MAKE) -f Makefile.cvs
	dh_auto_configure

# use parallel build
override_dh_auto_build:
	$(MAKE) -j 2

# disable tests for faster builds
override_dh_auto_test:
