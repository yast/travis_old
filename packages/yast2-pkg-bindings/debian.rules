#!/usr/bin/make -f

export DH_VERBOSE=1

# explicitly use gcc 4.8
export CC=gcc-4.8
export CXX=g++-4.8

%:
	dh $@

# we need to generate the autoconf/automake files first
# see https://www.debian.org/doc/manuals/maint-guide/dreq.en.html
override_dh_auto_configure:
	$(MAKE) -f Makefile.cvs
	dh_auto_configure

# use parallel build
override_dh_auto_build:
	$(MAKE) -j 2

