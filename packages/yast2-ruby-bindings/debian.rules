#!/usr/bin/make -f

export DH_VERBOSE=1

# TODO FIXME: hack for Ubuntu build
# cmake includes "/usr/include/ruby-2.1.0/x86_64-linux-gnu" instead of
# "/usr/include/x86_64-linux-gnu/ruby-2.1.0"
export CXXFLAGS=-I/usr/include/x86_64-linux-gnu/ruby-2.1.0

%:
	dh $@

# use lib instead of lib64
override_dh_auto_configure:
	dh_auto_configure -- -DLIB=lib

# use parallel build
override_dh_auto_build:
	$(MAKE) -j 2 -C obj-x86_64-linux-gnu

# disable tests for faster builds
override_dh_auto_test:

