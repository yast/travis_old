#!/usr/bin/make -f

export DH_VERBOSE=1

# explicitly use gcc 4.8
export CC=gcc-4.8
export CXX=g++-4.8

%:
	dh $@ --parallel

override_dh_auto_configure:
	dh_auto_configure -- -DLIB=lib -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_SKIP_RPATH=1 -DDISABLE_LIBPROXY=ON
       
# disable tests, tests cannot be found
override_dh_auto_test:

